{
  "name": "web-console",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm -C ../../packages/config build && vite",
    "build": "tsc -b && vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:watch": "tsc -p tsconfig.json --noEmit -w --preserveWatchOutput",
    "preview": "vite preview",
    "dev:server": "pnpm -C ../gateway dev",
    "dev:all": "concurrently -n WEB,API -c auto \"pnpm dev\" \"pnpm -C ../gateway dev\"",
    "dev:mock-server": "tsx server/dev-sse-server.ts"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^7.0.0",
    "@types/node": "^20.19.0",
    "@eclia/config": "workspace:*"
  }
}
